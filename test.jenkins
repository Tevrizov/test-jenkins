#!groovy
// Check ub1 properties
properties([disableConcurrentBuilds()])

pipeline {
    agent { 
         label 'docker-1' 
        }
    triggers { pollSCM('* * * * *') }  //тригер для запуску по коммиту 
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                sh 'cat /etc/fstab'
            }
        }
        stage("Second step") {
            steps {
                echo "======= start build images ========"
                dir ('docker/') {
                    sh 'sudo docker build -t toolbox:latest .'
                   //sh 'id'
                }
               //sh 'cat /etc/os-release'
            }
        }
        stage("Stage docker login to dockerhub") {
            steps {
                echo "======= start login to dockerhub ========"
                withCredentials ([usernamePassword(credentialsID: 'dockerhub', usernameVariable: 'USERNAME', passwordVariable:'PASSWORD')]){
                    sh """
                    docker login -u $USERNAME -p $PASSWORD
                    """
                }
            }
        }

      //  stage("Stage docker push to dockerhub") {
